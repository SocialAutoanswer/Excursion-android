<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginHorizontal="60dp">


    <ImageView
        android:id="@+id/notify_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/ic_cross_rounded"/>

    <TextView
        android:id="@+id/notify_text"
        style="@style/Text.H2.Bold"
        android:gravity="center"
        android:layout_marginTop="26dp"
        android:text="@string/screen_empty_list_title"/>

    <TextView
        android:id="@+id/notify_description"
        style="@style/Text.H3"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:text="@string/screen_empty_list_description"/>


</LinearLayout>