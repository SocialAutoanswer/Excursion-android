<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MatchParent">


    <ImageView
        android:id="@+id/logo_view"
        style="@style/WrapContent.LayoutCenter"
        android:src="@drawable/ic_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/signin_button" />

    <Button
        android:id="@+id/signin_button"
        style="@style/Button.Primary.MarginHorizontal_25dp"
        android:text="@string/screen_choose_auth_method_signin_button"
        android:layout_marginBottom="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/signup_button"/>

    <Button
        android:id="@+id/signup_button"
        style="@style/Button.Secondary.MarginHorizontal_25dp.MarginTop_16dp"
        android:text="@string/screen_choose_auth_method_signup_button"
        android:layout_marginBottom="174dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>