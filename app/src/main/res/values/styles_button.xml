<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Button" parent="MatchParentWrapContent">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:paddingVertical">16dp</item>
        <item name="android:paddingHorizontal">40dp</item>
    </style>
    
    <style name="Button.Primary">
        <item name="android:background">@drawable/background_button_primary</item>
        <item name="android:textColor">?attr/exc_button_text_color_on_primary</item>
    </style>
    
    <style name="Button.Primary.NoWidth">
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="Button.Primary.NoWidth.MarginHorizontal_16dp">
        <item name="android:layout_marginHorizontal">16dp</item>
    </style>

    <style name="Button.Primary.MarginHorizontal_25dp">
        <item name="android:layout_marginHorizontal">25dp</item>
    </style>

    <style name="Button.Primary.MarginHorizontal_25dp.MarginTop_50dp">
        <item name="android:layout_marginTop">50dp</item>
    </style>

    <style name="Button.Primary.NoWidth.MarginHorizontal_16dp.MarginTop_24dp">
        <item name="android:layout_marginTop">24dp</item>
    </style>

    <style name="Button.Primary.NoWidth.MarginHorizontal_16dp.MarginTop_24dp.MarginBottom_32dp">
        <item name="android:layout_marginBottom">32dp</item>
    </style>

</resources>