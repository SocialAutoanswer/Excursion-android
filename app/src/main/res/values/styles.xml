<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="button_text">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="button" parent="button_text">
        <item name="android:layout_width">@dimen/main_width</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:elevation">10dp</item>
    </style>

    <style name="save_button" parent="button">
        <item name="android:background">@drawable/background_save_btn</item>
    </style>

    <style name="delete_button" parent="button">
        <item name="android:background">@drawable/background_delete_btn</item>
    </style>

    <style name="nav_button" parent="button">

    </style>
    
    
</resources>