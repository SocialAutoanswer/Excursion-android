<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Common styles  -->
    <eat-comment/>

    <style name="WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WrapContent.MarginTop_16dp">
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="WrapContent.LayoutCenter">
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="WrapContent.LayoutCenterEnd">
        <item name="android:layout_gravity">end|center</item>
    </style>

    <style name="WrapContent.LayoutCenterEnd.MarginEnd_16dp">
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="WrapContent.LayoutCenterEnd.MarginEnd_16dp.MarginVertical_14dp">
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:layout_marginBottom">14dp</item>
    </style>

    <style name="MatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MatchParent.Vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MatchParent.Vertical.Padding_16dp">
        <item name="android:paddingHorizontal">16dp</item>
    </style>

    <style name="MatchParentWrapContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchParentWrapContent.MarginTop_48dp">
        <item name="android:layout_marginTop">48dp</item>
    </style>

    <style name="MatchParentWrapContent.Vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MatchParentWrapContent.Horizontal">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="WrapContentMatchParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MatchParent0dp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="MatchParent0dp.MarginHorizontal_25dp">
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:layout_marginEnd">25dp</item>
    </style>

    <style name="MatchParent0dp.MarginHorizontal_25dp.MarginTop_24dp">
        <item name="android:layout_marginTop">24dp</item>
    </style>

    <style name="MatchParent0dp.MarginHorizontal_25dp.MarginTop_40dp">
        <item name="android:layout_marginTop">40dp</item>
    </style>

    <style name="WrapContent0dp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
    </style>


    <style name="CustomDialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ExcDialog">
        <item name="android:maxWidth">340dp</item>
        <item name="android:minWidth">340dp</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>