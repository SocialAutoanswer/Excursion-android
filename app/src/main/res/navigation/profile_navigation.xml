<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profile_navigation"
    app:startDestination="@id/profileFragment">

    <fragment
        android:id="@+id/profileFragment"
        android:name="ru.exursion.ui.profile.ProfileFragment"
        android:label="ProfileFragment" >
        <action
            android:id="@+id/action_profileFragment_to_redactProfileFragment"
            app:destination="@id/redactProfileFragment" />
        <action
            android:id="@+id/action_profileFragment_to_questionsFragment"
            app:destination="@id/questionsFragment" />
        <action
            android:id="@+id/action_profileFragment_to_notificationSettingsFragment"
            app:destination="@id/notificationSettingsFragment" />
        <action
            android:id="@+id/action_profileFragment_to_decorSettingsFragment"
            app:destination="@id/decorSettingsFragment" />
        <action
            android:id="@+id/action_profileFragment_to_feedbackFragment"
            app:destination="@id/feedbackFragment" />
        <action
            android:id="@+id/action_profileFragment_to_aboutAppFragment"
            app:destination="@id/aboutAppFragment" />
        <action
            android:id="@+id/action_profileFragment_to_favoritesFragment"
            app:destination="@id/favoritesGroupFragment" />
    </fragment>
    <fragment
        android:id="@+id/redactProfileFragment"
        android:name="ru.exursion.ui.profile.RedactProfileFragment"
        android:label="RedactProfileFragment" >
        <action
            android:id="@+id/action_redactProfileFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/questionsFragment"
        android:name="ru.exursion.ui.profile.QuestionsFragment"
        android:label="QuestionsFragment" >
        <action
            android:id="@+id/action_questionsFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/notificationSettingsFragment"
        android:name="ru.exursion.ui.profile.NotificationSettingsFragment"
        android:label="NotificationSettingsFragment" >
        <action
            android:id="@+id/action_notificationSettingsFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/decorSettingsFragment"
        android:name="ru.exursion.ui.profile.DecorSettingsFragment"
        android:label="DecorSettingsFragment" >
        <action
            android:id="@+id/action_decorSettingsFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/feedbackFragment"
        android:name="ru.exursion.ui.profile.FeedbackFragment"
        android:label="FeedbackFragment" >
        <action
            android:id="@+id/action_feedbackFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/aboutAppFragment"
        android:name="ru.exursion.ui.profile.AboutAppFragment"
        android:label="AboutAppFragment" >
        <action
            android:id="@+id/action_aboutAppFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/favoritesGroupFragment"
        android:name="ru.exursion.ui.profile.FavoriteGroupsFragment"
        android:label="FavoritesGroupFragment" >
        <action
            android:id="@+id/action_favoritesGroupFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_favoritesGroupFragment_to_routesFragment"
            app:destination="@id/routesFragment" />
        <action
            android:id="@+id/action_favoritesGroupFragment_to_hotelsFragment"
            app:destination="@id/hotelsFragment" />
        <action
            android:id="@+id/action_favoritesGroupFragment_to_eventsFragment"
            app:destination="@id/eventsFragment" />
        <action
            android:id="@+id/action_favoritesGroupFragment_to_locationsFragment"
            app:destination="@id/locationsFragment" />
    </fragment>
    <fragment
        android:id="@+id/routesFragment"
        android:name="ru.exursion.ui.routes.fragments.RoutesFragment"
        android:label="RoutesFragment" >
        <action
            android:id="@+id/action_routesFragment_to_routeDetailsFragment"
            app:destination="@id/routeDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/hotelsFragment"
        android:name="ru.exursion.ui.routes.fragments.HotelsFragment"
        android:label="HotelsFragment" >
        <action
            android:id="@+id/action_hotelsFragment_to_hotelDetailsFragment"
            app:destination="@id/hotelDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/eventsFragment"
        android:name="ru.exursion.ui.routes.fragments.EventsFragment"
        android:label="EventsFragment" >
        <action
            android:id="@+id/action_eventsFragment_to_eventDetailsFragment"
            app:destination="@id/eventDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/eventDetailsFragment"
        android:name="ru.exursion.ui.routes.fragments.EventDetailsFragment"
        android:label="EventDetailsFragment" />
    <fragment
        android:id="@+id/hotelDetailsFragment"
        android:name="ru.exursion.ui.routes.fragments.HotelDetailsFragment"
        android:label="HotelDetailsFragment" />
    <fragment
        android:id="@+id/locationsFragment"
        android:name="ru.exursion.ui.routes.fragments.LocationsFragment"
        android:label="LocationsFragment" >
        <action
            android:id="@+id/action_locationsFragment_to_locationDetailsFragment"
            app:destination="@id/locationDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/locationDetailsFragment"
        android:name="ru.exursion.ui.routes.fragments.LocationDetailsFragment"
        android:label="LocationDetailsFragment" />
    <fragment
        android:id="@+id/routeDetailsFragment"
        android:name="ru.exursion.ui.routes.fragments.RouteDetailsFragment"
        android:label="RouteDetailsFragment" />
</navigation>